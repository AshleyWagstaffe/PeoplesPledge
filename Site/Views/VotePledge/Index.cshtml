@model Site.Models.ConstituencyViewModel

@{
    ViewData["Title"] = "Pledge My Vote";
}

@section Scripts{
    <script src="@Url.Content("~/js/react/AddressPicker.jsx")"></script>
    <script src="@Url.Content("~/js/react/VotePledgeIndex.jsx")"></script>
}

<h1>Pledge My Vote</h1>

<div>
    <h4>Use this form to decide which candidate you will pledge your vote to</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Postcode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Postcode)
        </dd>
    </dl>
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">Candidate</th>
                <th scope="col">Party</th>
                <th scope="col">Tweet to</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidate in Model.Candidates)
            {
                <tr>
                    <th scope="row">
                        @candidate.Name
                    </th>
                    <td>
                        @candidate.Party.Name
                    </td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(candidate.TwitterUsername))
                        {
                            <a href="https://twitter.com/intent/tweet?screen_name=@candidate.TwitterUsername&ref_src=twsrc%5Etfw" class="twitter-mention-button" data-show-count="false">Tweet to @candidate.TwitterUsername</a>
                            <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <div id="content"></div>
</div>